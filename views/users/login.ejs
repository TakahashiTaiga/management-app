<body>
  <div class="login_form">
    <h1>システムへログイン</h1>
    <div class="form_contents">
        <form method="post" action="/management-app/users/login">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="inner_form">
                <div class="form_elements">
                    <div class="mb-3">
                        <label for="mail_address" class="form-label"><p class="form_font">メールアドレス</p></label>
                        <input type="email" class="form-control" name="mail_address" id="mail_address">
                    </div>
                </div>
                <div  class="form_elements">
                    <div class="mb-3">
                        <label for="password" class="form-label" class="form_font"><p class="form_font">パスワード</p></label>
                        <input type="password" class="form-control" name="password" id="password">
                    </div>
                </div>
            </div>

            <div class="form_message"><p class="form_message_font"><%- content %></p></div>
          
          <div class="form_btn d-grid gap-2"><input type="submit" value="ログイン" class="btn btn-primary"></div>
        </form>
    </div>
    <a href="/management-app/users/add" class="login_btn_font">
      <div class="form_btn d-grid gap-2">
        <button class="btn btn-outline-secondary" type="button">アカウントの作成</button>
      </div>
    </a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

